<%- include("../../fragments/head.ejs") %>


    <div class="page-section">
        <h2 class="page-section__title">Contact</h2>
        <div class="page-section__content">
            <div class="horizontal-split" style="align-items: center;">
                <div style="max-width:550px;filter: contrast(1.8);"><img style="width: 100%;" src="/img/login.png"
                        alt="">
                </div>
                <div class="">
                    <%- include("../../components/alert-banner.ejs")%>
                        <form action="/contact/new" method="post">
                            <div class="group --maring-top-2">
                                <label for="full_name">
                                    full name
                                </label>
                                <input type="text" id="full_name" placeholder="Jack Sparrow" name="full_name">

                            </div>
                            <div class="group --maring-top-2">
                                <label for="email">
                                    email
                                </label>
                                <input type="text" id="email" placeholder="example@domain.com" name="email">

                            </div>
                            <div class="group --maring-top-2">
                                <label for="title">
                                    Title
                                </label>
                                <input type="text" id="title" placeholder="Your issue/suggestion" name="title">

                            </div>
                            <div class="group --maring-top-2">
                                <label for="message">
                                    message
                                </label>
                                <textarea type="password" min-rows="5" id="message"
                                    placeholder="Write your message here" name="message"></textarea>
                            </div>

                            <button type="submit" class="button1 --maring-top-2">Submit</button>
                        </form>

                </div>
            </div>

        </div>
    </div>

    <%- include("../../fragments/end.ejs") %>